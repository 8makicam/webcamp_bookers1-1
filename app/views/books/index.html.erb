<h3>Books</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>


<h1>Newbook</h1>


<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



<%= form_with model:@book, url: "/books", local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %></br>

<% end %>

