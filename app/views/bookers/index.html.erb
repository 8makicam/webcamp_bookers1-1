<h3>Books</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", booker_path(book.id) %>
<%= link_to "edit", edit_booker_path(book.id) %>
<%= link_to "destroy", booker_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>


<h1>Newbook</h1>

<%= form_with model:@book, url: "/bookers", local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div class="form-group">  
<%= f.label :title %>
<%= f.text_field :title %>
</div>

  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %></br>

<% end %>

