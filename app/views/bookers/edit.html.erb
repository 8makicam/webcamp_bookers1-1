<h1>編集画面</h1>
<!-- form_with部分 -->
<%= form_with model:@book, url: booker_path, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
<% end %>

<p><%= link_to "SHOW", booker_path %></p>
<p><%= link_to "BACK", bookers_path %></p>